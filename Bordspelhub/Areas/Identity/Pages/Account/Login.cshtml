@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/signin.css" rel="stylesheet">


<div class="signin-body">
    <main class="form-signin w-100 m-auto" >
        <form id="account" method="post">
            
            <h1 class="h3 mb-3 fw-normal">Inloggen</h1>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="naam@voorbeeld.com">
                <label asp-for="Input.Email" class="form-label">Email adres</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Wachtwoord">
                <label asp-for="Input.Password" class="form-label">Wachtwoord</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Wachtwoord herinneren
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Inloggen</button>
            <h1 class="h5 mb-3 fw-normal " style="margin-top:40px">Nog geen account?</h1>
            <a class="w-100 btn btn-lg btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Registreren</a>
            <p class="mt-5 mb-3 text-muted">&copy; 2017–2022</p>

        </form>

    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
