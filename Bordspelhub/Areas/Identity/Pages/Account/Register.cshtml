@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<link href="~/css/signin.css" rel="stylesheet">


<div class="signin-body">
    <main class="form-signin w-100 m-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h1 class="h3 mb-3 fw-normal">Account registreren</h1>

            <div class="form-floating">
                <input asp-for="Input.Email" type="email" class="form-control"  placeholder="naam@voorbeeld.com" aria-required="true">
                <label asp-for="Input.Email">Email adres</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" placeholder="wachtwoord" aria-required="true">
                <label asp-for="Input.Password">Wachtwoord</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Wachtwoord bevestigen" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Wachtwoord bevestigen</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/>

            <button id="registerSubmit" class="w-100 btn btn-lg btn-primary" type="submit">Registreren</button>
    
        </form>
        <h1 class="h5 mb-3 fw-normal " style="margin-top:40px">Heeft u al een account?</h1>
        <a class="w-100 btn btn-lg btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Inloggen</a>
        <p class="mt-5 mb-3 text-muted">&copy; 2017–2022</p>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
