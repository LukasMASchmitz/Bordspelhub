@model Bordspelhub.Models.Spel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card" style="margin-top:2%">

    <div class="row">
        <div class="col-3 text-center align-self-center">
            <img class="img-fluid" src="https://i.imgur.com/7a9V4yw.png">
        </div>
        <div class="col-7">
            <div class="row title">
                <div class="col">
                    <h2>@Html.DisplayFor(model => model.SpelNaam)</h2>
                </div>
                <div class="col text-right">
                    <p>aangemaakt door: @Html.DisplayFor(model => model.Gebruiker)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-9">
                    <p>@Html.DisplayFor(model => model.Beschrijving)</p>
                    <p>Categorie: @Html.DisplayFor(model => model.Categorie)</p>
                    <p>Minimale leeftijd: @Html.DisplayFor(model => model.Pegi)</p>
                </div>
                <div class="col-3">
                    <div class="btn-group" style="margin-top:90%">
                            <a asp-action ="Details" asp-route-id="@Html.DisplayFor(model => model.SpelId)" class="btn btn-sm btn-outline-secondary">View</a>
                        <a asp-action="Edit" asp-route-id="@Html.DisplayFor(model => model.SpelId)" class="btn btn-sm btn-outline-secondary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.SpelId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
